            android:name=".activities.TestStartActivityByComponent"
            android:label="@string/title_activity_test_start_by_component"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.OpenGLES20Complete"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MyFragmentActivity"
            android:label="@string/title_activity_my_fragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.NewsFragmentActivity"
            android:label="@string/title_activity_news_fragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.EditListenerActivity"></activity>
    </application>

</manifest>